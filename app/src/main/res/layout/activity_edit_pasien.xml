<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".pasien.editPasien">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="1dp"
            android:gravity="center"
            android:outlineAmbientShadowColor="#7C7C7C00"
            android:outlineSpotShadowColor="#7C7C7C00"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:outlineProvider="none"
                android:paddingVertical="10sp">

                <ImageButton
                    android:id="@+id/backButton"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_marginLeft="16sp"
                    android:background="@drawable/ic_back_arrow" />

                <TextView
                    android:id="@+id/teksToolBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/nunito_bold"
                    android:text="Edit Data Pasien"
                    android:textColor="@color/black"
                    android:textSize="22sp" />

            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.AppBarLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints">

        <LinearLayout
            android:paddingBottom="200dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="68dp"
            android:paddingHorizontal="16sp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/appBar">

            <androidx.cardview.widget.CardView
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:shape="ring"
                app:cardCornerRadius="50dp">

                <ImageView
                    android:id="@+id/fotoPerawat"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/ic_profile_picture"
                    android:background="@drawable/mbuled"
                    tools:ignore="VectorDrawableCompat" />
            </androidx.cardview.widget.CardView>

            <Button
                android:visibility="gone"
                android:layout_marginTop="8dp"
                android:id="@+id/fotoPasien"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="tambahkan foto"/>









            <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/tableLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="1"> <!-- stretch the second column of the layout-->

                <!-- Nomor Registrasi-->
                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16sp"
                    >

                    <!-- first element of the row-->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10sp"

                        android:text="Nomor Registrasi"
                        android:fontFamily="@font/nunito_regular"
                        android:textColor="#8F8F8F"
                        android:textSize="16sp"/>

                    <TextView
                        android:layout_gravity="center_vertical"
                        android:id="@+id/textNoReg"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito_regular"
                        android:textColor="#000"
                        android:textSize="16sp" />

                    <ImageButton
                        android:layout_gravity="center_vertical"
                        android:id="@+id/editNoReg"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginLeft="8sp"
                        android:backgroundTint="@color/black"
                        android:background="@drawable/ic_baseline_edit_24" />

                </TableRow>

                <!-- Nama Lengkap-->
                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16sp"
                    >

                    <!-- first element of the row-->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10sp"
                        android:text="Nama Lengkap"
                        android:fontFamily="@font/nunito_regular"
                        android:textColor="#8F8F8F"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/textNama"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito_regular"
                        android:textColor="#000"
                        android:textSize="16sp" />

                    <ImageButton
                        android:layout_gravity="center_vertical"
                        android:id="@+id/editNama"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginLeft="8sp"
                        android:backgroundTint="@color/black"
                        android:background="@drawable/ic_baseline_edit_24" />

                </TableRow>

                <!-- Tanggal Lahir-->
                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16sp"
                    >

                    <!-- first element of the row-->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10sp"
                        android:text="Tanggal Lahir"
                        android:fontFamily="@font/nunito_regular"
                        android:textColor="#8F8F8F"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/textTanggalLahir"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito_regular"
                        android:textColor="#000000"
                        android:textSize="16sp" />

                    <ImageButton
                        android:layout_gravity="center_vertical"
                        android:id="@+id/editTanggalLahir"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginLeft="8sp"
                        android:backgroundTint="@color/black"
                        android:background="@drawable/ic_baseline_edit_24" />

                </TableRow>

                <!-- Usia-->
                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16sp"
                    >

                    <!-- first element of the row-->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10sp"
                        android:text="Usia"
                        android:fontFamily="@font/nunito_regular"
                        android:textColor="#8F8F8F"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/textUsia"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/nunito_regular"
                        android:textColor="#000000"
                        android:textSize="16sp" />

                    <ImageButton
                        android:layout_gravity="center_vertical"
                        android:id="@+id/editUsia"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginLeft="8sp"
                        android:backgroundTint="@color/black"
                        android:background="@drawable/ic_baseline_edit_24" />

                </TableRow>

                <!-- Jenis Kelamin-->
                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16sp"
                    >

                    <!-- first element of the row-->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10sp"
                        android:text="Jenis Kelamin"
                        android:fontFamily="@font/nunito_regular"
                        android:textColor="#8F8F8F"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/textJenisKelamin"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito_regular"
                        android:textColor="#000000"
                        android:textSize="16sp" />

                    <ImageButton
                        android:layout_gravity="center_vertical"
                        android:id="@+id/editJenisKelamin"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginLeft="8sp"
                        android:backgroundTint="@color/black"
                        android:background="@drawable/ic_baseline_edit_24" />

                </TableRow>

                <!-- Agama-->
                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16sp"
                    >

                    <!-- first element of the row-->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10sp"
                        android:text="Agama"
                        android:fontFamily="@font/nunito_regular"
                        android:textColor="#8F8F8F"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/textAgama"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito_regular"
                        android:textColor="#000000"
                        android:textSize="16sp" />

                    <ImageButton
                        android:layout_gravity="center_vertical"
                        android:id="@+id/editAgama"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginLeft="8sp"
                        android:backgroundTint="@color/black"
                        android:background="@drawable/ic_baseline_edit_24" />

                </TableRow>

                <!-- Email-->
                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16sp"
                    >

                    <!-- first element of the row-->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10sp"
                        android:text="Email"
                        android:fontFamily="@font/nunito_regular"
                        android:textColor="#8F8F8F"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/textEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/nunito_regular"
                        android:textColor="#000000"
                        android:textSize="16sp" />

                    <ImageButton
                        android:layout_gravity="center_vertical"
                        android:id="@+id/editEmail"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginLeft="8sp"
                        android:backgroundTint="@color/black"
                        android:background="@drawable/ic_baseline_edit_24" />

                </TableRow>

                <!-- Nomor Hp-->
                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16sp"
                    >

                    <!-- first element of the row-->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10sp"
                        android:text="No. Hp"
                        android:fontFamily="@font/nunito_regular"
                        android:textColor="#8F8F8F"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/textNoHp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/nunito_regular"
                        android:textColor="#000000"
                        android:textSize="16sp" />

                    <ImageButton
                        android:layout_gravity="center_vertical"
                        android:id="@+id/editNoHp"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginLeft="8sp"
                        android:backgroundTint="@color/black"
                        android:background="@drawable/ic_baseline_edit_24" />

                </TableRow>

                <!-- Alamat-->
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16sp"
                    >

                    <!-- first element of the row-->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10sp"
                        android:text="Alamat"
                        android:fontFamily="@font/nunito_regular"
                        android:textColor="#8F8F8F"
                        android:textSize="16sp"/>


                    <TextView
                        android:id="@+id/textAlamat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito_regular"
                        android:textColor="#000000"
                        android:layout_weight="1"
                        android:textSize="16sp" />

                    <ImageButton
                        android:id="@+id/editAlamat"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginLeft="8sp"
                        android:backgroundTint="@color/black"
                        android:background="@drawable/ic_baseline_edit_24" />

                </TableRow>



            </TableLayout>








        </LinearLayout>


        </ScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>