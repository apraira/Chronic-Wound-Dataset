<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:weightSum="7.5">

  <com.google.android.material.appbar.AppBarLayout
      android:id="@+id/appBar"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="0.6"
      android:elevation="1dp"
      android:outlineAmbientShadowColor="#7C7C7C00"
      android:outlineSpotShadowColor="#7C7C7C00">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:background="@color/white"
        android:outlineProvider="none"
        android:paddingVertical="10sp">

      <ImageButton
          android:id="@+id/backButton"
          android:layout_width="22dp"
          android:layout_height="22dp"
          android:layout_marginLeft="16sp"
          android:background="@drawable/ic_back_arrow" />

      <TextView
          android:id="@+id/teksToolBar"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="20dp"
          android:layout_marginLeft="20dp"
          android:fontFamily="@font/nunito_bold"
          android:text="Anotasi Tepi Luka"
          android:textColor="@color/black"
          android:textSize="22sp" />

      <de.hdodenhof.circleimageview.CircleImageView
          android:visibility="gone"
          android:id="@+id/btn_upload"
          android:layout_width="48dp"
          android:layout_height="match_parent"
          android:layout_gravity="right"
          android:layout_marginRight="16sp"
          android:src="@drawable/ic_baseline_image_24"
          android:foregroundTint="@color/black"
          android:tint="@color/black" />


    </androidx.appcompat.widget.Toolbar>
  </com.google.android.material.appbar.AppBarLayout>

  <!-- canvas -->



  <FrameLayout
      android:id="@+id/leot"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="5"
      android:layout_above="@+id/linear"
      android:layout_gravity="fill"
      >


    <ImageView
        android:visibility="visible"
        android:id="@+id/img"
        android:adjustViewBounds="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.example.chronicwound.anotasi.PathView
        android:visibility="visible"
        android:id="@+id/draw_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

  </FrameLayout>


  <!-- tools button -->
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="0.9"
      android:orientation="horizontal"
      android:paddingVertical="8sp">

    <LinearLayout
        android:id="@+id/btn_red"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

      <ImageButton
          android:id="@+id/warna"
          android:clickable="false"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:background="@null"
          android:src="@drawable/ic_paint_brush"
          android:text="Stroke"
          app:tint="#FF0000" />

      <TextView
          android:clickable="false"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="10dp"
          android:text="Red" />

    </LinearLayout>




    <LinearLayout
        android:id="@+id/btn_undo"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

      <ImageButton
          android:clickable="false"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:background="@null"
          android:src="@drawable/ic_undo"
          android:text="Upload" />

      <TextView
          android:clickable="false"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Undo" />

    </LinearLayout>

  </LinearLayout>

  <!-- Range Slider -->
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="0.5"
      android:orientation="vertical"
      android:paddingHorizontal="8sp">

    <com.google.android.material.slider.RangeSlider
        android:id="@+id/rangebar"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

  </LinearLayout>


  <!-- save button-->
  <Button
      android:id="@+id/submitAnotasi"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_gravity="center_horizontal|center"
      android:layout_marginHorizontal="16dp"
      android:layout_marginTop="10sp"
      android:layout_marginBottom="16sp"
      android:layout_weight="0.5"
      android:background="@drawable/primary_button"
      android:text="SAVE" />


</LinearLayout>