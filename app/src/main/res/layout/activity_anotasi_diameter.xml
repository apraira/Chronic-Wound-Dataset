<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".anotasi.anotasiDiameter">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:elevation="1dp"
            android:outlineSpotShadowColor="#7C7C7C00"
            android:outlineAmbientShadowColor="#7C7C7C00">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:paddingVertical="10sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:outlineProvider="none">

                <ImageButton
                    android:layout_marginLeft="16sp"
                    android:id="@+id/backButton"
                    android:layout_width="16sp"
                    android:layout_height="16sp"
                    android:background="@drawable/ic_back_arrow"/>

                <TextView
                    android:id="@+id/teksToolBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/nunito_bold"
                    android:text="Anotasi Diameter Luka X"
                    android:textColor="@color/black"
                    android:textSize="22sp" />


            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.AppBarLayout>






        <ScrollView
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/appBar"
            android:layout_marginBottom="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentBottom="true"
                app:layout_constraintTop_toBottomOf="@id/appBar"
                >


                <FrameLayout
                    android:id="@+id/leot"
                    android:layout_marginBottom="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/linear"
                    android:layout_alignParentTop="true"
                    app:layout_constraintTop_toBottomOf="@+id/appBar">

                    <ImageView
                        android:id="@+id/img"
                        android:layout_width="match_parent"
                        android:layout_height="524dp" />

                    <com.example.chronicwound.anotasi.PathView
                        android:id="@+id/draw_view"
                        android:layout_width="match_parent"
                        android:layout_height="524dp" />

                </FrameLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"

                    android:layout_marginBottom="20dp"
                    android:layout_marginHorizontal="20dp"
                    >



                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        >

                        <ImageButton
                            android:id="@+id/btn_stroke"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_paint_brush"
                            android:background="@null"
                            android:text="Stroke" />

                        <TextView
                            android:layout_marginTop="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Stroke"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:gravity="center"
                        >

                        <ImageButton
                            android:id="@+id/btn_undo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:src="@drawable/ic_undo"
                            android:background="@null"
                            android:text="Upload" />

                        <TextView
                            android:layout_marginTop="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Undo"/>

                    </LinearLayout>

                    <LinearLayout
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        >
                        <!--    Input Panjang-->
                        <TextView
                            android:id="@+id/textViewInputPanjang"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Panjang X (cm)"/>

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:id="@+id/textInputLayoutDiameter"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0"
                            android:layout_marginBottom="8dp">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/editTextDiameter"
                                android:layout_width="match_parent"
                                android:inputType="number"
                                android:digits="0123456789.,"
                                android:layout_height="50dp"
                                />
                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>


                    <!--
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:gravity="center"
                        >

                      <ImageButton
                          android:id="@+id/btn_upload"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_weight="1"
                          android:src="@drawable/ic_image"
                          android:background="@null"
                          android:text="Upload" />

                      <TextView
                          android:layout_marginTop="10dp"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="Upload"/>

                    </LinearLayout>
                   TextView Npm Mahasiswa -->



                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.google.android.material.slider.RangeSlider
                        android:id="@+id/rangebar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        />

                </LinearLayout>

                <Button
                    android:id="@+id/submitAnotasi"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginTop="10sp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_gravity="center_horizontal|center"
                    android:background="@drawable/primary_button"
                    android:layout_marginBottom="20dp"
                    android:text="SAVE" />
            </LinearLayout>

        </ScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>