<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="1dp"
        android:outlineAmbientShadowColor="#7C7C7C00"
        android:outlineSpotShadowColor="#7C7C7C00">


        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:background="@color/white"
            android:outlineProvider="none"
            android:paddingVertical="10sp">

            <ImageButton
                android:id="@+id/backButton"
                android:layout_width="22sp"
                android:layout_height="22sp"
                android:layout_marginLeft="16sp"
                android:background="@drawable/ic_back_arrow" />

            <TextView
                android:id="@+id/teksToolBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/nunito_bold"
                android:text="Foto Luka Pasien"
                android:textColor="@color/black"
                android:textSize="22sp" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:visibility="gone"
                android:id="@+id/btn_upload"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_marginRight="16sp"
                android:src="@drawable/ic_baseline_image_24"
                android:foregroundTint="@color/black"
                android:tint="@color/black" />


        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <!-- canvas -->



    <FrameLayout
        android:id="@+id/leot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp"
        android:layout_above="@+id/linear"
        android:layout_gravity="fill"
        >

        <ImageView
            android:id="@+id/imageHolder"
            android:layout_width="match_parent"
            android:layout_height="560dp"
            android:adjustViewBounds="true"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars" />



    </FrameLayout>

    <!-- Arsir Warna Luka-->
    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:layout_marginTop="8sp"
        android:id="@+id/arsirWarnaLuka"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="8sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardElevation="4sp"
        android:outlineSpotShadowColor="#9E9E9E"
        android:outlineAmbientShadowColor="#9E9E9E"
        card_view:cardBackgroundColor="#FFFFFF"
        card_view:cardCornerRadius="15sp"
        tools:targetApi="honeycomb">

        <LinearLayout
            android:layout_margin="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_arsir_warna"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:paddingHorizontal="16sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunito_bold"
                    android:text="Arsir Warna Luka \nFoto di Atas"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    />

            </LinearLayout>
        </LinearLayout>


    </androidx.cardview.widget.CardView>




    <!-- table metadata -->
    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/tableLayout"
        android:paddingVertical="16sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1"> <!-- stretch the second column of the layout-->

        <!-- nama pasien-->
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            >

            <!-- first element of the row-->
            <TextView

                android:layout_marginHorizontal="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dip"
                android:text="No. Reg Pasien"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="#8F8F8F"
                android:textSize="14sp"/>

            <TextView

                android:layout_marginRight="20dp"
                android:id="@+id/textNamaPasien"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dip"
                android:gravity="right"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="#000000"
                android:textSize="14sp"/>

        </TableRow>

        <!-- nama perawat-->
        <TableRow
            android:background="#EFEFEF"
            android:id="@+id/barisNamaPerawat"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <!-- first element of the row-->
            <TextView

                android:layout_marginHorizontal="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dip"
                android:text="ID perawat"
                android:fontFamily="@font/nunito"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="#8F8F8F"
                android:textSize="14sp"/>

            <TextView
                android:fontFamily="@font/nunito"
                android:layout_marginRight="20dp"
                android:id="@+id/textNamaPerawat"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:padding="8dip"
                android:gravity="right"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="#000000"
                android:textSize="14sp"/>

        </TableRow>

        <!-- filename -->
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <!-- first element of the row-->
            <TextView
                android:layout_width="wrap_content"
                android:fontFamily="@font/nunito"
                android:layout_marginHorizontal="20dp"
                android:layout_height="wrap_content"
                android:padding="8dip"
                android:text="Filename"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="#8F8F8F"
                android:textSize="14sp"/>

            <TextView
                android:layout_marginRight="20dp"
                android:fontFamily="@font/nunito"
                android:id="@+id/textFileName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dip"
                android:gravity="right"
                android:layout_weight="1"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="#000000"
                android:textSize="14sp"/>

        </TableRow>

        <!-- created at-->
        <TableRow
            android:background="#EFEFEF"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <!-- first element of the row-->
            <TextView
                android:layout_marginHorizontal="20dp"
                android:fontFamily="@font/nunito"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dip"
                android:text="Created At"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="#8F8F8F"
                android:textSize="14sp"/>

            <TextView
                android:layout_marginRight="20dp"
                android:id="@+id/textCreatedAt"
                android:fontFamily="@font/nunito"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:padding="8dip"
                android:gravity="right"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="#000000"
                android:textSize="14sp"/>

        </TableRow>

        <!-- category -->
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <!-- first element of the row-->
            <TextView
                android:layout_marginHorizontal="20dp"
                android:fontFamily="@font/nunito"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dip"
                android:text="Category"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="#8F8F8F"
                android:textSize="14sp"/>

            <TextView
                android:layout_marginRight="20dp"
                android:id="@+id/textCategory"
                android:fontFamily="@font/nunito"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:padding="8dip"
                android:gravity="right"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="#000000"
                android:textSize="14sp"/>

        </TableRow>


    </TableLayout>

    <!-- button -->

    <Button
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"
        android:id="@+id/deleteImage"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginHorizontal="20dp"
        android:backgroundTint="@color/Accent"
        android:textColor="@color/Accent"
        android:background="@drawable/secondary_button"
        android:text="Hapus Foto" />


</LinearLayout>

</ScrollView>