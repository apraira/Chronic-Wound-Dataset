<?xml version="1.0" encoding="utf-8"?>

<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".gallery.singleImageView"

    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageHolder"
        android:layout_width="match_parent"
        android:layout_height="560dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1"> <!-- stretch the second column of the layout-->

        <!-- nama pasien-->
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            >

            <!-- first element of the row-->
            <TextView

                android:layout_marginHorizontal="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dip"
                android:text="No. Reg Pasien"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="#8F8F8F"
                android:textSize="18sp"/>

            <TextView

                android:layout_marginRight="20dp"
                android:id="@+id/textNamaPasien"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dip"
                android:gravity="right"
                android:text="Ervan Foster"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="#000000"
                android:textSize="18sp"/>

        </TableRow>

        <!-- nama perawat-->
        <TableRow
            android:background="#EFEFEF"
            android:id="@+id/barisNamaPerawat"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <!-- first element of the row-->
            <TextView

                android:layout_marginHorizontal="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dip"
                android:text="NIP"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="#8F8F8F"
                android:textSize="18sp"/>

            <TextView

                android:layout_marginRight="20dp"
                android:id="@+id/textNamaPerawat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dip"
                android:gravity="right"
                android:text="Ratna Aryani"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="#000000"
                android:textSize="18sp"/>

        </TableRow>

        <!-- filename -->
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <!-- first element of the row-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_height="wrap_content"
                android:padding="8dip"
                android:text="Filename"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="#8F8F8F"
                android:textSize="18sp"/>

            <TextView
                android:layout_marginRight="20dp"
                android:id="@+id/textFileName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dip"
                android:gravity="right"
                android:text="blablabla.jpg"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="#000000"
                android:textSize="18sp"/>

        </TableRow>

        <!-- created at-->
        <TableRow
            android:background="#EFEFEF"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <!-- first element of the row-->
            <TextView
                android:layout_marginHorizontal="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dip"
                android:text="Created At"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="#8F8F8F"
                android:textSize="18sp"/>

            <TextView
                android:layout_marginRight="20dp"
                android:id="@+id/textCreatedAt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dip"
                android:gravity="right"
                android:text="05/10/2022 08:37:54"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="#000000"
                android:textSize="18sp"/>

        </TableRow>

        <!-- category -->
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <!-- first element of the row-->
            <TextView
                android:layout_marginHorizontal="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dip"
                android:text="Category"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="#8F8F8F"
                android:textSize="18sp"/>

            <TextView
                android:layout_marginRight="20dp"
                android:id="@+id/textCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dip"
                android:gravity="right"
                android:text="Raw Photo"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="#000000"
                android:textSize="18sp"/>

        </TableRow>


    </TableLayout>

    <Button
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:id="@+id/backButton"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/Accent"
        android:textColor="@color/Accent"
        android:background="@drawable/secondary_button"
        android:text="Kembali" />




</LinearLayout>

</ScrollView>