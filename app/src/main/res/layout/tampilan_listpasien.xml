<androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:clipChildren="false"
    android:clipToPadding="false"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_weight="1"
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:elevation="1dp"
        android:outlineSpotShadowColor="#7C7C7C00"
        android:outlineAmbientShadowColor="#7C7C7C00">

        <androidx.appcompat.widget.Toolbar
            android:visibility="visible"
            android:id="@+id/toolbar"
            android:paddingVertical="10sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:actionViewClass="androidx.appcompat.widget.SearchView"
            app:showAsAction="ifRoom|collapseActionView"
            android:outlineProvider="none">

            <ImageButton
                android:layout_marginLeft="16sp"
                android:id="@+id/backButton"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:background="@drawable/ic_back_arrow"/>

            <TextView
                android:visibility="visible"
                android:id="@+id/teksToolBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/nunito_bold"
                android:text="Daftar Pasien"
                android:textColor="@color/black"
                android:textSize="22sp" />



            <androidx.appcompat.widget.SearchView
                android:id="@+id/searchView"
                android:paddingRight="8sp"
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:elevation="2dp"
                android:background="#fff"
                android:layout_height="wrap_content"/>

        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>


    <com.google.android.material.chip.ChipGroup
        android:layout_weight="1"
        android:background="@color/white"
        android:outlineProvider="none"
        android:elevation="2dp"
        android:id="@+id/filterPasien"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appBar"
        app:singleSelection="true">

        <com.google.android.material.chip.Chip
            android:id="@+id/olehAnda"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Oleh Anda" />

        <com.google.android.material.chip.Chip
            android:id="@+id/semuaPasien"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Semua" />

        <com.google.android.material.chip.Chip
            android:id="@+id/pasienLaki"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_regular"
            android:textSize="14sp"
            android:text="Laki-laki" />

        <com.google.android.material.chip.Chip
            android:id="@+id/pasienPerempuan"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_regular"
            android:textSize="14sp"
            android:text="Perempuan" />
    </com.google.android.material.chip.ChipGroup>




    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/tambah_pasien"
        app:cornerRadius="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:layout_margin="16dp"
        android:contentDescription="add"
        android:text="Tambah Pasien Baru"
        app:backgroundTint="#169DBD"
        app:iconTint="#fff"
        android:textColor ="#fff"
        app:icon="@drawable/ic_baseline_add_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints"
        android:elevation="4dp"
        android:textAllCaps="false"
        android:fontFamily="@font/nunito_bold"
        android:textSize="14sp"
        android:outlineSpotShadowColor="#9E9E9E"
        android:outlineAmbientShadowColor="#9E9E9E"/>



    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:orientation="vertical"
        android:paddingHorizontal="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/filterPasien">

        <androidx.recyclerview.widget.RecyclerView
            android:clipChildren="false"
            android:clipToPadding="false"
            android:paddingBottom="250sp"
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>