<androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:clipChildren="false"
    android:clipToPadding="false"
    xmlns:android="http://schemas.android.com/apk/res/android">



    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:elevation="1dp"
        android:outlineSpotShadowColor="#7C7C7C00"
        android:outlineAmbientShadowColor="#7C7C7C00">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:paddingVertical="10sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:outlineProvider="none">

            <ImageButton
                android:layout_marginLeft="16sp"
                android:id="@+id/backButton"
                android:layout_width="16sp"
                android:layout_height="16sp"
                android:background="@drawable/ic_back_arrow"/>

            <TextView
                android:id="@+id/teksToolBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/nunito_bold"
                android:text="Tambah Kajian Luka Pasien"
                android:textColor="@color/black"
                android:textSize="22sp" />
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20sp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appBar">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/ic_rectangle_profile"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/appBar" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="16dp">

                <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/fotoPasien"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="10sp"
                    android:background="@drawable/circleshape"
                    android:src="@drawable/ic_profile_picture" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical">
                    <!-- TextView Nama Pasien -->
                    <TextView
                        android:id="@+id/nama_pasien"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito_bold"
                        android:text="Jane Doe"
                        android:textColor="@color/white"
                        android:textSize="20sp" />

                    <!-- TextView Npm Mahasiswa -->
                    <TextView
                        android:id="@+id/nomorRekamMedis"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito_regular"
                        android:text="No. Registrasi: 1313617888"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <!--Kelamin-->
                        <TextView
                            android:id="@+id/jenisKelamin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nunito_regular"
                            android:text="Wanita"
                            android:textColor="@color/white"
                            android:textSize="14sp" />

                        <View
                            android:layout_width="0.8dp"
                            android:layout_marginHorizontal="4dp"
                            android:layout_height="match_parent"
                            android:background="#fff" />

                        <TextView
                            android:id="@+id/usiaPasien"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nunito_regular"
                            android:text="13 Tahun"
                            android:textColor="@color/white"
                            android:textSize="14sp" />

                    </LinearLayout>



                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>


        <!-- Tombol Kamera -->
        <androidx.cardview.widget.CardView

            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:layout_marginTop="16sp"
            android:id="@+id/cameraButton"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardElevation="4dp"
            android:outlineSpotShadowColor="#9E9E9E"
            android:outlineAmbientShadowColor="#9E9E9E"
            card_view:cardBackgroundColor="#FFFFFF"
            card_view:cardCornerRadius="15dp"
            tools:targetApi="honeycomb">

            <LinearLayout
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_gravity="left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_camera"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:paddingHorizontal="16sp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito_bold"
                        android:text="Ambil Foto Luka"
                        android:textColor="@color/black"
                        android:textSize="22sp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="@font/nunito_regular"
                        android:text="Foto luka, anotasi tepi, anotasi diameter"
                        android:textColor="@color/black"
                        android:textSize="10sp"
                        />
                </LinearLayout>
            </LinearLayout>


        </androidx.cardview.widget.CardView>



        <ScrollView
            android:visibility="gone"
            android:id="@+id/formKajian"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8sp"
            android:orientation="vertical"
            android:layout_marginBottom="100dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <ImageView
                    android:layout_marginVertical="16sp"
                    android:scaleType="centerCrop"
                    android:id="@+id/rawImageView"
                    android:layout_width="200dp"
                    android:layout_height="180dp"
                    android:layout_weight="1"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:srcCompat="@tools:sample/avatars" />

                    <ImageView
                        android:layout_marginVertical="16sp"
                        android:scaleType="centerCrop"
                        android:id="@+id/anotasiTepiView"
                        android:layout_width="200dp"
                        android:layout_height="180dp"
                        android:layout_weight="1"
                        android:layout_marginHorizontal="8sp"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:srcCompat="@tools:sample/avatars" />
                    <ImageView
                        android:layout_marginVertical="16sp"
                        android:scaleType="centerCrop"
                        android:id="@+id/anotasiDiameterView"
                        android:layout_width="200dp"
                        android:layout_height="180dp"
                        android:layout_weight="1"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:srcCompat="@tools:sample/avatars" />

                </LinearLayout>

            <!--    Size-->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayoutSize"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:fontFamily="@font/nunito_bold"
                android:layout_height="wrap_content"

                android:hint="Size">

                <AutoCompleteTextView
                    android:id="@+id/editTextSize"
                    android:fontFamily="@font/nunito_bold"
                    android:layout_width="match_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_height="wrap_content"
                    android:inputType="none" />

            </com.google.android.material.textfield.TextInputLayout>

            <!--    Edges -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayoutEdges"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:fontFamily="@font/nunito_bold"
                android:layout_height="wrap_content"

                android:hint="Edges">

                <AutoCompleteTextView
                    android:fontFamily="@font/nunito_bold"
                    android:id="@+id/editTextEdges"
                    android:layout_width="match_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_height="wrap_content"
                    android:inputType="none" />

            </com.google.android.material.textfield.TextInputLayout>

            <!--    Necrotic Type -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayoutNType"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:fontFamily="@font/nunito_bold"
                android:layout_height="wrap_content"

                android:hint="Necrotic Type">

                <AutoCompleteTextView
                    android:fontFamily="@font/nunito_bold"
                    android:id="@+id/editTextNType"
                    android:layout_width="match_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_height="wrap_content"
                    android:inputType="none" />

            </com.google.android.material.textfield.TextInputLayout>

            <!--    Necrotic Amount -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayoutNAmount"
                android:fontFamily="@font/nunito_bold"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:hint="Necrotic Amount">

                <AutoCompleteTextView
                    android:id="@+id/editTextNAmount"
                    android:layout_width="match_parent"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/nunito_bold"
                    android:layout_height="wrap_content"
                    android:inputType="none" />

            </com.google.android.material.textfield.TextInputLayout>

            <!--    Skin Color Surround -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayoutSkinColor"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:fontFamily="@font/nunito_bold"
                android:layout_height="wrap_content"

                android:hint="Skin Color Surrounding Wound">

                <AutoCompleteTextView
                    android:id="@+id/editTextSkinColor"
                    android:layout_width="match_parent"
                    android:fontFamily="@font/nunito_bold"
                    android:layout_marginBottom="10dp"
                    android:layout_height="wrap_content"
                    android:inputType="none" />

            </com.google.android.material.textfield.TextInputLayout>

            <!--    Granulation Tissue -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayoutGranulation"
                android:fontFamily="@font/nunito_bold"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:hint="Granulation Tissue">

                <AutoCompleteTextView
                    android:id="@+id/editTextGranulation"
                    android:layout_width="match_parent"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/nunito_bold"
                    android:layout_height="wrap_content"
                    android:inputType="none" />

            </com.google.android.material.textfield.TextInputLayout>


            <!--    Epithelization Tissue -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayoutEpithelization"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_bold"
                android:hint="Epithelization Tissue">

                <AutoCompleteTextView
                    android:id="@+id/editTextEpithelization"
                    android:layout_width="match_parent"
                    android:layout_marginBottom="20dp"
                    android:fontFamily="@font/nunito_bold"
                    android:layout_height="wrap_content"
                    android:inputType="none" />

            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/buttonSubmit"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:fontFamily="@font/nunito_bold"
                android:layout_gravity="center_horizontal|center"
                android:background="@drawable/primary_button"
                android:layout_marginBottom="20dp"
                android:text="SUBMIT DATA" />

            </LinearLayout>
        </ScrollView>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>