<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="14dp"
    android:layout_marginHorizontal="4sp"
    card_view:cardElevation="4dp"
    android:outlineSpotShadowColor="#9E9E9E"
    android:outlineAmbientShadowColor="#9E9E9E"
    card_view:cardBackgroundColor="#FFFFFF"
    card_view:cardCornerRadius="15dp"
    tools:targetApi="honeycomb">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:background="@drawable/circleshape"
            android:id="@+id/fotoPasien"
            android:layout_width="60dp"
            android:layout_gravity="center"
            android:layout_height="60dp"
            android:layout_marginRight="10sp"
            android:src="@drawable/ic_profile_picture"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <!-- TextView Nama Pasien -->
        <TextView
            android:id="@+id/txt_nama_Pasien"
            android:layout_width="match_parent"
            android:fontFamily="@font/nunito_bold"
            android:textColor="#000000"
            android:text="Jane Doe"
            android:textSize="20sp"
            android:layout_height="wrap_content" />

        <!-- TextView Npm Mahasiswa -->
        <TextView
            android:id="@+id/txt_nrm_pasien"
            android:layout_width="match_parent"
            android:text="No. Registrasi: 1313617888"
            android:fontFamily="@font/nunito_regular"
            android:textColor="#7C7C7C"
            android:textSize="14sp"
            android:layout_height="wrap_content" />

        <!-- TextView NoHp Mahasiswa -->
        <TextView
            android:id="@+id/txt_skor_terakhir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Wanita | 13 Tahun"
            android:fontFamily="@font/nunito_regular"
            android:textColor="#7C7C7C"
            android:textSize="14sp"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>