<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="14dp"
    android:layout_marginHorizontal="4sp"
    card_view:cardElevation="4dp"
    android:outlineSpotShadowColor="#9E9E9E"
    android:outlineAmbientShadowColor="#9E9E9E"
    card_view:cardBackgroundColor="#FFFFFF"
    card_view:cardCornerRadius="15dp"

    android:clipChildren="false"
    android:clipToPadding="false"
    tools:targetApi="honeycomb">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"

        android:clipChildren="false"
        android:clipToPadding="false"
        android:padding="16dp">

        <androidx.cardview.widget.CardView
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:shape="ring"
            card_view:cardElevation="0dp"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:layout_marginRight="8sp"
            app:cardCornerRadius="37dp">

            <ImageView
                android:id="@+id/fotoPasien"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/ic_profile_picture"
                android:background="@drawable/mbuled"
                tools:ignore="VectorDrawableCompat" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">
            <!-- TextView Nama Pasien -->
            <TextView
                android:id="@+id/nama_pasien"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_bold"

                android:textColor="@color/black"
                android:textSize="20sp" />

            <!-- TextView Npm Mahasiswa -->
            <TextView
                android:id="@+id/nomorRekamMedis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_regular"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <!--Kelamin-->
                <TextView
                    android:id="@+id/jenisKelamin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunito_regular"

                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <View
                    android:layout_gravity="center"
                    android:layout_width="0.8dp"
                    android:layout_marginHorizontal="4dp"
                    android:layout_height="14sp"
                    android:background="#000" />

                <TextView
                    android:id="@+id/usiaPasien"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunito_regular"

                    android:textColor="@color/black"
                    android:textSize="14sp" />

            </LinearLayout>



        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>