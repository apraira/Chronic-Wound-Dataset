<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profilPasienFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".gallery.singleImageView"
        android:paddingBottom="400dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_gravity="center_vertical"
                android:layout_marginVertical="8sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_bold"
                android:text="Informasi Umum Pasien"
                android:layout_marginHorizontal="16sp"
                android:textColor="#9E9E9E"
                android:textSize="22sp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="right"
                android:layout_gravity="center_vertical"
                android:layout_height="match_parent">
                <ImageButton
                    android:layout_marginRight="20sp"
                    android:id="@+id/editButton"
                    android:paddingRight="16sp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/ic_baseline_edit_24"
                    android:backgroundTint="#9E9E9E"/>

            </LinearLayout>

        </LinearLayout>



        <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/tableLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1">
            <!-- stretch the second column of the layout-->
            <!-- tanggal pendaftaran-->
            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                >

                <!-- first element of the row-->
                <TextView
                    android:layout_marginHorizontal="8sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8sp"

                    android:text="Tanggal Pendaftaran"
                    android:fontFamily="@font/nunito_regular"
                    android:textColor="#8F8F8F"
                    android:textSize="14sp"/>

                <TextView

                    android:layout_marginRight="8sp"
                    android:id="@+id/textCreatedAt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8sp"
                    android:fontFamily="@font/nunito_bold"
                    android:text=""
                    android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                    android:textColor="#000000"
                    android:textSize="14sp"/>

            </TableRow>

            <!-- nomor registrasi-->
            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                >

                <!-- first element of the row-->
                <TextView
                    android:layout_marginHorizontal="8sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8sp"

                    android:text="Nomor Registrasi"
                    android:fontFamily="@font/nunito_regular"
                    android:textColor="#8F8F8F"
                    android:textSize="14sp"/>

                <TextView

                    android:layout_marginRight="8sp"
                    android:id="@+id/textNoReg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8sp"
                    android:fontFamily="@font/nunito_bold"
                    android:text=""
                    android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                    android:textColor="#000000"
                    android:textSize="14sp"/>

            </TableRow>

            <!-- nama lengkap-->
            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                >

                <!-- first element of the row-->
                <TextView
                    android:layout_marginHorizontal="8sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8sp"

                    android:text="Nama Lengkap"
                    android:fontFamily="@font/nunito_regular"
                    android:textColor="#8F8F8F"
                    android:textSize="14sp"/>

                <TextView

                    android:layout_marginRight="8sp"
                    android:id="@+id/textNamaPasien"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8sp"
                    android:fontFamily="@font/nunito_bold"
                    android:text=""
                    android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                    android:textColor="#000000"
                    android:textSize="14sp"/>

            </TableRow>

            <!-- tanggal lahir-->
            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                >

                <!-- first element of the row-->
                <TextView
                    android:layout_marginHorizontal="8sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8sp"

                    android:text="Tanggal Lahir"
                    android:fontFamily="@font/nunito_regular"
                    android:textColor="#8F8F8F"
                    android:textSize="14sp"/>

                <TextView

                    android:layout_marginRight="8sp"
                    android:id="@+id/textTanggalLahir"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8sp"
                    android:fontFamily="@font/nunito_bold"
                    android:text=""
                    android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                    android:textColor="#000000"
                    android:textSize="14sp"/>

            </TableRow>

            <!-- usia-->
            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                >

                <!-- first element of the row-->
                <TextView
                    android:layout_marginHorizontal="8sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8sp"

                    android:text="Usia"
                    android:fontFamily="@font/nunito_regular"
                    android:textColor="#8F8F8F"
                    android:textSize="14sp"/>

                <TextView

                    android:layout_marginRight="8sp"
                    android:id="@+id/textUsia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8sp"
                    android:fontFamily="@font/nunito_bold"
                    android:text=""
                    android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                    android:textColor="#000000"
                    android:textSize="14sp"/>

            </TableRow>

            <!-- Jenis Kelamin-->
            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                >

                <!-- first element of the row-->
                <TextView
                    android:layout_marginHorizontal="8sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8sp"

                    android:text="Jenis Kelamin"
                    android:fontFamily="@font/nunito_regular"
                    android:textColor="#8F8F8F"
                    android:textSize="14sp"/>

                <TextView

                    android:layout_marginRight="8sp"
                    android:id="@+id/textJenisKelamin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8sp"
                    android:fontFamily="@font/nunito_bold"
                    android:text=""
                    android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                    android:textColor="#000000"
                    android:textSize="14sp"/>

            </TableRow>

            <!-- Agama-->
            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                >

                <!-- first element of the row-->
                <TextView
                    android:layout_marginHorizontal="8sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8sp"

                    android:text="Agama"
                    android:fontFamily="@font/nunito_regular"
                    android:textColor="#8F8F8F"
                    android:textSize="14sp"/>

                <TextView

                    android:layout_marginRight="8sp"
                    android:id="@+id/textAgama"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8sp"
                    android:fontFamily="@font/nunito_bold"
                    android:text=""
                    android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                    android:textColor="#000000"
                    android:textSize="14sp"/>

            </TableRow>

            <!-- Email-->
            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                >

                <!-- first element of the row-->
                <TextView
                    android:layout_marginHorizontal="8sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8sp"

                    android:text="Email"
                    android:fontFamily="@font/nunito_regular"
                    android:textColor="#8F8F8F"
                    android:textSize="14sp"/>

                <TextView

                    android:layout_marginRight="8sp"
                    android:id="@+id/textEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8sp"
                    android:fontFamily="@font/nunito_bold"
                    android:text=""
                    android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                    android:textColor="#000000"
                    android:textSize="14sp"/>

            </TableRow>

            <!-- Nomor Hp-->
            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                >

                <!-- first element of the row-->
                <TextView
                    android:layout_marginHorizontal="8sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8sp"

                    android:text="Nomor Hp"
                    android:fontFamily="@font/nunito_regular"
                    android:textColor="#8F8F8F"
                    android:textSize="14sp"/>

                <TextView

                    android:layout_marginRight="8sp"
                    android:id="@+id/textNoHp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8sp"
                    android:fontFamily="@font/nunito_bold"
                    android:text=""
                    android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                    android:textColor="#000000"
                    android:textSize="14sp"/>

            </TableRow>


            <!-- Alamat-->
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <!-- first element of the row-->
                <TextView
                    android:layout_marginHorizontal="8sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8sp"

                    android:text="Alamat"
                    android:fontFamily="@font/nunito_regular"
                    android:textColor="#8F8F8F"
                    android:textSize="14sp"/>

                <TextView

                    android:layout_marginRight="8sp"
                    android:id="@+id/textAlamat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8sp"
                    android:layout_weight="1"
                    android:fontFamily="@font/nunito_bold"
                    android:text=""
                    android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                    android:textColor="#000000"
                    android:textSize="14sp"/>

            </TableRow>






        </TableLayout>

    </LinearLayout>

</ScrollView>