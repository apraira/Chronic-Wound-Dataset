<androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:clipChildren="false"
    android:clipToPadding="false"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_weight="1"
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:elevation="1dp"
        android:outlineSpotShadowColor="#7C7C7C00"
        android:outlineAmbientShadowColor="#7C7C7C00">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:paddingVertical="10sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:outlineProvider="none">

            <ImageButton
                android:layout_marginLeft="16sp"
                android:id="@+id/backButton"
                android:layout_width="16sp"
                android:layout_height="16sp"
                android:background="@drawable/ic_back_arrow"/>

            <TextView
                android:id="@+id/teksToolBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/nunito_bold"
                android:text="Galeri Luka Kronis"
                android:textColor="@color/black"
                android:textSize="22sp" />
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <com.google.android.material.chip.ChipGroup
        android:layout_weight="1"
        android:background="@color/white"
        android:outlineProvider="none"
        android:elevation="2dp"
        android:id="@+id/filterPasien"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appBar"
        app:singleSelection="true">

        <com.google.android.material.chip.Chip
            android:id="@+id/chipRaw"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Raw" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipTepi"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_regular"
            android:textSize="14sp"
            android:text="Anotasi Tepi" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipDiameter"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_regular"
            android:textSize="14sp"
            android:text="Anotasi Diameter" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipArsir"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_regular"
            android:textSize="14sp"
            android:text="Arsir Warna Luka" />
    </com.google.android.material.chip.ChipGroup>



    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:orientation="vertical"
        android:paddingHorizontal="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/filterPasien">

        <androidx.recyclerview.widget.RecyclerView
            android:clipChildren="false"
            android:clipToPadding="false"
            android:paddingBottom="200sp"
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>