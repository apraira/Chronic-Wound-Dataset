<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AnotasiActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="1dp"
            android:gravity="center"
            android:outlineAmbientShadowColor="#7C7C7C00"
            android:outlineSpotShadowColor="#7C7C7C00"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:outlineProvider="none"
                android:paddingVertical="10sp">

                <ImageButton
                    android:id="@+id/backButton"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_marginLeft="16sp"
                    android:background="@drawable/ic_back_arrow" />

                <TextView
                    android:id="@+id/teksToolBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/nunito_bold"
                    android:text="Profil Perawat"
                    android:textColor="@color/black"
                    android:textSize="22sp" />

            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.AppBarLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="68dp"
            android:paddingHorizontal="16sp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/appBar">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:shape="ring"
                app:cardCornerRadius="50dp">

                <ImageView
                    android:id="@+id/fotoPerawat"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/ic_profile_picture"
                    android:background="@drawable/mbuled"
                    tools:ignore="VectorDrawableCompat" />
            </androidx.cardview.widget.CardView>









            <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/tableLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="1"> <!-- stretch the second column of the layout-->

            <!-- tanggal pendaftaran-->
            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12sp"
                >

                <!-- first element of the row-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10sp"

                    android:text="Nama"
                    android:fontFamily="@font/nunito_regular"
                    android:textColor="#8F8F8F"
                    android:textSize="16sp"/>

                <TextView
                    android:layout_gravity="center_vertical"
                    android:id="@+id/textNamaPerawat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunito_bold"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <ImageButton
                    android:layout_gravity="center_vertical"
                    android:id="@+id/editNama"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="16sp"
                    android:backgroundTint="@color/black"
                    android:background="@drawable/ic_baseline_edit_24" />

            </TableRow>

            <!-- nomor registrasi-->
            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8sp"
                >

                <!-- first element of the row-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10sp"
                    android:text="NIP"
                    android:fontFamily="@font/nunito_regular"
                    android:textColor="#8F8F8F"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/textNIPPerawat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunito_bold"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <ImageButton
                    android:layout_gravity="center_vertical"
                    android:id="@+id/editNIP"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="16sp"
                    android:backgroundTint="@color/black"
                    android:background="@drawable/ic_baseline_edit_24" />

            </TableRow>

            <!-- nama lengkap-->
            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8sp"
                >

                <!-- first element of the row-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10sp"
                    android:text="Email"
                    android:fontFamily="@font/nunito_regular"
                    android:textColor="#8F8F8F"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/textEmailPerawat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunito_regular"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <ImageButton
                    android:layout_gravity="center_vertical"
                    android:id="@+id/editEmail"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="16sp"
                    android:backgroundTint="@color/black"
                    android:background="@drawable/ic_baseline_edit_24" />

            </TableRow>

            </TableLayout>







            <Button

                android:id="@+id/buttonLogout"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="20sp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/secondary_button"
                android:backgroundTint="@color/Accent"
                android:text="Log Out"
                android:textColor="@color/Accent" />


        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>