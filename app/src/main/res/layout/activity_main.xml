<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:clipChildren="false"
    android:clipToPadding="false"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:elevation="1dp"
        android:outlineSpotShadowColor="#7C7C7C00"
        android:outlineAmbientShadowColor="#7C7C7C00">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:paddingVertical="10sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <TextView
                android:id="@+id/teksToolBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="20sp"
                android:layout_marginLeft="20sp"
                android:fontFamily="@font/nunito_bold"
                android:text="Beranda"
                android:textColor="@color/black"
                android:textSize="22sp" />


            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_marginRight="16sp"
                android:id="@+id/circle_imageView"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_gravity="right"
                android:src="@drawable/ic_profil" />
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:clipChildren="false"
        android:clipToPadding="false"
        android:layout_marginTop="20sp"
        android:paddingHorizontal="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appBar">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardElevation="0dp"
            >
            <ImageView
                android:id="@+id/img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/ic_rectangle_home"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/appBar" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:paddingHorizontal="16sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_regular"
                android:text="Selamat Datang"
                android:textColor="@color/white"
                android:textSize="22sp"
                />
            <TextView
                android:id="@+id/namaPerawat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/nunito_extrabold"
                android:textColor="@color/white"
                android:textSize="24sp"
                />
                <TextView
                    android:id="@+id/view_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/nunito_extrabold"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    />
            </LinearLayout>


        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:layout_marginTop="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_bold"
            android:text="Features"
            android:textColor="#9E9E9E"
            android:textSize="22sp"
            />


        <!-- Data Pasien -->
        <androidx.cardview.widget.CardView

            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:layout_marginTop="16sp"
            android:id="@+id/data_pasien"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardElevation="4dp"
            android:outlineSpotShadowColor="#9E9E9E"
            android:outlineAmbientShadowColor="#9E9E9E"
            card_view:cardBackgroundColor="#FFFFFF"
            card_view:cardCornerRadius="15sp"
            tools:targetApi="honeycomb">

            <LinearLayout
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_gravity="left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_data_pasien"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:paddingHorizontal="16sp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunito_bold"
                    android:text="Daftar Pasien"
                    android:textColor="@color/black"
                    android:textSize="22sp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/nunito_regular"
                    android:text="Lihat daftar pasien"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    />
                </LinearLayout>
            </LinearLayout>


        </androidx.cardview.widget.CardView>


        <!-- Galeri Foto Luka-->
        <androidx.cardview.widget.CardView
            android:visibility="gone"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:layout_marginTop="8sp"
            android:id="@+id/galeri_luka"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardElevation="4sp"
            android:outlineSpotShadowColor="#9E9E9E"
            android:outlineAmbientShadowColor="#9E9E9E"
            card_view:cardBackgroundColor="#FFFFFF"
            card_view:cardCornerRadius="15sp"
            tools:targetApi="honeycomb">

            <LinearLayout
                android:layout_margin="10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_gravity="left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_galeri_foto_luka"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:paddingHorizontal="16sp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito_bold"
                        android:text="Galeri Foto Luka"
                        android:textColor="@color/black"
                        android:textSize="22sp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="@font/nunito_regular"
                        android:text="Lihat semua foto luka kronis"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        />
                </LinearLayout>
            </LinearLayout>


        </androidx.cardview.widget.CardView>


        <!-- Arsir Warna Luka-->
        <androidx.cardview.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:layout_marginTop="8sp"
            android:id="@+id/arsirWarnaLuka"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardElevation="4sp"
            android:outlineSpotShadowColor="#9E9E9E"
            android:outlineAmbientShadowColor="#9E9E9E"
            card_view:cardBackgroundColor="#FFFFFF"
            card_view:cardCornerRadius="15sp"
            tools:targetApi="honeycomb">

            <LinearLayout
                android:layout_margin="10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_gravity="left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_arsir_warna"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:paddingHorizontal="16sp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito_bold"
                        android:text="Arsir Warna Luka"
                        android:textColor="@color/black"
                        android:textSize="22sp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="@font/nunito_regular"
                        android:text="Mengarsir warna luka dengan RYB"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        />
                </LinearLayout>
            </LinearLayout>


        </androidx.cardview.widget.CardView>
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>