<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profilPasienFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        tools:context=".gallery.singleImageView">


        <TableLayout
            android:id="@+id/tableLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1"> <!-- stretch the second column of the layout-->

            <!-- tanggal pendaftaran-->
            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <!-- first element of the row-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16sp"
                    android:layout_marginVertical="8sp"
                    android:fontFamily="@font/nunito_bold"
                    android:text="Galeri Luka Pasien"
                    android:textColor="#9E9E9E"
                    android:textSize="22sp" />

                <Button
                    android:visibility="gone"
                    android:id="@+id/galeriFilter"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:elevation="0sp"
                    android:fontFamily="@font/nunito_regular"
                    android:gravity="center|right|end"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:shadowColor="#00FFFFFF"
                    android:text="Filter"
                    android:textAllCaps="false"
                    android:textColor="#9E9E9E"
                    android:textSize="16sp"
                    app:backgroundTint="@color/white"
                    app:icon="@drawable/ic_filter"
                    app:iconGravity="textStart"
                    app:iconPadding="-80dip"
                    app:iconSize="16dp"
                    app:iconTint="#9E9E9E"
                    app:strokeColor="#fff"
                    tools:targetApi="honeycomb" />

            </TableRow>



        </TableLayout>

        <com.google.android.material.chip.ChipGroup
            android:layout_weight="1"
            android:background="@color/white"
            android:outlineProvider="none"
            android:elevation="2dp"
            android:id="@+id/filterPasien"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/appBar"
            app:singleSelection="true">

            <com.google.android.material.chip.Chip
                android:id="@+id/chipAll"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="All" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipRaw"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Raw" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipTepi"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_regular"
                android:textSize="14sp"
                android:text="Anotasi Tepi" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipDiameter"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_regular"
                android:textSize="14sp"
                android:text="Anotasi Diameter" />
        </com.google.android.material.chip.ChipGroup>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_images"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="350sp"/>

        <TextView
            android:id="@+id/teksKosong"
            android:layout_gravity="center
"           android:textAlignment="center"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16sp"
            android:layout_marginVertical="8sp"
            android:fontFamily="@font/nunito_regular"
            android:text="Belum terdapat foto pasien, silakan tambah kajian terlebih dahulu"
            android:textColor="#000"
            android:textSize="14sp" />


    </LinearLayout>

</ScrollView>