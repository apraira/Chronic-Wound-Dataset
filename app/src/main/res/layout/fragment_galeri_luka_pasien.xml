<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profilPasienFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        tools:context=".gallery.singleImageView">


        <TableLayout
            android:id="@+id/tableLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1"> <!-- stretch the second column of the layout-->

            <!-- tanggal pendaftaran-->
            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <!-- first element of the row-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16sp"
                    android:layout_marginVertical="8sp"
                    android:fontFamily="@font/nunito_bold"
                    android:text="Galeri Luka Pasien"
                    android:textColor="#9E9E9E"
                    android:textSize="22sp" />

                <Button
                    android:id="@+id/galeriFilter"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:elevation="0sp"
                    android:fontFamily="@font/nunito_regular"
                    android:gravity="center|right|end"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:shadowColor="#00FFFFFF"
                    android:text="Filter"
                    android:textAllCaps="false"
                    android:textColor="#9E9E9E"
                    android:textSize="16sp"
                    app:backgroundTint="@color/white"
                    app:icon="@drawable/ic_filter"
                    app:iconGravity="textStart"
                    app:iconPadding="-80dip"
                    app:iconSize="16dp"
                    app:iconTint="#9E9E9E"
                    app:strokeColor="#fff"
                    tools:targetApi="honeycomb" />

            </TableRow>



        </TableLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_images"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

</ScrollView>